set linebreak
set modeline
set modelines=2
set scrolloff=3
set ignorecase
set smartcase
set wildignore=*.o,*.pyc,*.class,*.jar,venv,_site,build,target
filetype on
filetype plugin on
filetype indent on
autocmd BufWrite * set nobomb
set backspace=indent,eol,start
set clipboard=unnamed

